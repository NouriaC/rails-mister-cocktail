<div class="container">
  <div class="row">
    <div class="col">
      <br>
      <h1>All Mocktails</h1>
      <br>
    </div>
  </div>
</div>
<div class="cards d-flex flex-wrap justify-content-around ">
    <% @cocktails.each do |cocktail| %>
      <div class="card mb-5 text-center" style="width: 18rem;">
          <div class="card-body">
            <h3 class="card-title"><%= cocktail.name.capitalize %></h3>
            <% if cocktail.photo.attached?  %>
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 200, crop: :fill %>
              <% end %>
          </div>
        <%= link_to 'See details', cocktail_path(cocktail), class: "btn" %>
         </div>
    <% end %>
</div>
