<div class="banner-content navbar-lewagon">
<h1>Mocktail Party</h1>

    <%= link_to "Add a new mocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
</div>
<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
   <div class="col-12 col-md-6 col-lg-3">
    <% background_url = cl_image_path cocktail.photos.key, width: 400, height: 500, crop: :fill %>

    <div class="card">
      <div class="card-description">
        <h2><%= cocktail.name %></h2>
      </div>
      <%= link_to "Click here", cocktail_path(cocktail) %>
   </div>
  </div>
  <% end %>
 </div>
</div>
